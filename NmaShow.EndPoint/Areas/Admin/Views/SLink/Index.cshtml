@model List<NamaShow.Core.VeiwModels.Movie.Session.Episode.SLink.IndexSLinkForAdmin>
@{
    ViewData["Title"] = "Index";
    string x = ViewBag.Episode;
}

<div class="card-body">
    <h4 class="card-title btn btn-outline-primary btn-rounded btn-fw"> <a class="text-dark " href="~/Admin/SLink/Create?id=@x">Create New</a></h4>
    <h4 class="card-title">All Links For Episode</h4>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>LinkName </th>
                <th> Show </th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.LinkName </td>
                    <td>
                        @item.Show
                    </td>
               <td>
                   @item.Price                   
               </td>
                    <td>
                        <a href="~/Admin/SLink/Edit?id=@item.LinkId"> Edit </a>
                        <a class="text-danger" href="~/Admin/SLink/Delete?id=@item.LinkId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


