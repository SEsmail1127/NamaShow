@model NamaShow.Core.VeiwModels.Movie.MovieLink.CreateMovieLinkForAdmin

@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title btn btn-outline-primary btn-rounded btn-fw"> <a class="text-dark " asp-action="Index">Index</a></h4>
                        <h4 class="card-title">Create MovieLink</h4>

                        <form asp-action="Create" method="post" class="forms-sample" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputName1">LinkName</label>
                                <input type="text" class="form-control" asp-for="LinkName" placeholder="LinkName">
                                <span class="validate-color" asp-validation-for="LinkName"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCity1">LinkUrl</label>
                                <input type="text" class="form-control" asp-for="LinkUrl" placeholder="LinkUrl">
                                <span class="validate-color" asp-validation-for="LinkUrl"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCity1">Price</label>
                                <input type="text" class="form-control" asp-for="Price" placeholder="Price">
                                <span class="validate-color" asp-validation-for="Price"></span>
                            </div>
                            <input type="hidden"asp-for="MovieId" />
                            <button class="btn btn-success mr-2">Submit</button>
                          
                        </form>


                    </div>
                </div>
            </div>


        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
