@model IEnumerable<NamaShow.Core.VeiwModels.Movie.Session.Episode.IndexEpisodeForAdmin>

@{
    ViewData["Title"] = "Index";
    string x = ViewBag.sessionId;
}

<div class="card-body">
    <h4 class="card-title btn btn-outline-primary btn-rounded btn-fw"> <a class="text-dark " href="~/Admin/Episode/Create?id=@x">Create New</a></h4>
    <h4 class="card-title">All Episode</h4>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>EpisodeNumber </th>
                <th> Show </th>
                <th>Episodes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.EpisodeNumber </td>
                    <td>
                        @item.Show
                    </td>
                    <td><a href="~/Admin/SLink/Index?id=@item.EpisodeId">Links</a></td>
                    <td>
                        <a href="~/Admin/Episode/Edit?id=@item.EpisodeId"> Edit </a>
                        <a class="text-danger" href="~/Admin/Episode/Delete?id=@item.EpisodeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
