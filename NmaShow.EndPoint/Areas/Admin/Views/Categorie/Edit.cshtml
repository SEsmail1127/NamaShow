@model NamaShow.Core.VeiwModels.CategorieForAdmin.EditCategorieForAdmin

@{
    ViewData["Title"] = "Edit";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title btn btn-outline-primary btn-rounded btn-fw"> <a class="text-dark " asp-action="Index">Index</a></h4>
                        <h4 class="card-title">Edit Categorie</h4>

                        <form asp-action="Edit" method="post" class="forms-sample">
                       

                            <div class="form-group">
                                <label for="exampleInputName1">Title</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Categorie Title">
                                <span class="validate-color" asp-validation-for="Title"></span>
                            </div>

                            <input type="hidden" asp-for="ParentId" />
                            <input type="hidden" asp-for="Id" />


                            <button class="btn btn-success mr-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
