@model NamaShow.Core.VeiwModels.Slider.EditSliderForAdmin

@{
    ViewData["Title"] = "Edit";
    List<NamaShow.Core.VeiwModels.MovieForAdminVM.ListOfMovieForSlide> movies = ViewBag.Movies;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title btn btn-outline-primary btn-rounded btn-fw"> <a class="text-dark " asp-action="Index">Index</a></h4>
                        <h4 class="card-title">Edit Slider</h4>
                        <form asp-action="Edit" method="post" class="forms-sample" >
                            <div class="form-group">
                                <label asp-for="MovieId" class="control-label">Movie Related</label>
                                <select asp-for="MovieId" id="MovieId" class="form-control">
                                    @foreach (var item in movies)
                                    {
                                        <option value="@item.MovieId"  >@item.Title</option>

                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Order</label>
                                <input type="text" class="form-control" asp-for="Order" placeholder="Order">
                                <span class="validate-color" asp-validation-for="Order"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Url</label>
                                <input type="text" class="form-control" asp-for="Url" placeholder="Url">
                                <span class="validate-color" asp-validation-for="Url"></span>
                            </div>
                            <input type="hidden" asp-for="SlideId" />
                            <input type="hidden" asp-for="MovieId" />
                            <div class="form-group">
                                <label for="exampleInputName1">Show</label>
                                <input type="checkbox" asp-for="Show">
                            </div>
                            <button class="btn btn-success mr-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
